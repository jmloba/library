<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="297.0" prefWidth="448.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Login.LoginController">
   <children>
      <VBox prefHeight="297.0" prefWidth="448.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label fx:id="login_label" alignment="CENTER" prefHeight="48.0" prefWidth="448.0" style="-fx-background-color: black; -fx-text-fill: white;" text="Library Assistant Login " textAlignment="CENTER">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <HBox alignment="CENTER" prefHeight="64.0" prefWidth="448.0">
               <children>
                  <TextField fx:id="tf_username" promptText="Username" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="64.0" prefWidth="448.0">
               <children>
                  <TextField fx:id="tf_password" onAction="#handleButtonAction" promptText="Password" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="64.0" prefWidth="448.0">
               <children>
                  <Button fx:id="btn_login" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="31.0" prefWidth="129.0" text="Login" />
                  <Button fx:id="btn_cancel" mnemonicParsing="false" onAction="#proc_login_cancel" prefHeight="31.0" prefWidth="129.0" text="Cancel" />
               </children>
            </HBox>
            <Label text="Username : admin" />
            <Label text="Password : Mike" />
         </children>
      </VBox>
   </children>
</AnchorPane>
